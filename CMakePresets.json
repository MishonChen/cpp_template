{
    "version": 8,
    "configurePresets": [
        {
            "name": "llvm-debug",
            "displayName": "LLVM Debug configure preset",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/debug"
            }
        },
        {
            "name": "llvm-release",
            "displayName": "LLVM Release Configure Preset",
            "description": "Sets Ninja generator for Release build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "description": "",
            "displayName": "",
            "configurePreset": "llvm-release"
        },
        {
            "name": "debug",
            "description": "",
            "displayName": "",
            "configurePreset": "llvm-debug"
        }
    ]
}